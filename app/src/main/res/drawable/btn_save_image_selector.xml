<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_circle_ok_black" android:tileMode="disabled" />
            </item>
            <item>
                <shape>
                    <gradient android:angle="270" android:endColor="#00ffffff" android:startColor="#00ffffff" />
                    <stroke android:width="1dp" android:color="#00ffffff" />
                    <corners android:radius="2000dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>

            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_circle_ok_white" android:tileMode="disabled" />
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="#00a67637" android:startColor="#00e0b071" />
                    <stroke android:width="1dp" android:color="#00ffffff" />
                    <corners android:radius="2000dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>