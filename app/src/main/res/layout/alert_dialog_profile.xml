<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/background_alert_screen"
        android:layout_weight="3">

        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/background_profile"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_color="#36b0d9"
                android:id="@+id/profile_image"
                android:src="@drawable/default_user"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bun Thoeurn"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/image_bttn_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:background="@color/colorPrimaryNoColor"
                android:layout_marginTop="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_profile_alert"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryTranparant">

            <ImageButton
                android:id="@+id/image_btn_chat"
                android:background="@color/colorPrimaryNoColor"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/message_profile_alert"/>

            <ImageButton
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@color/colorPrimaryNoColor"
                android:src="@drawable/calling_icon"

                />

            <!--<ImageButton-->
            <!--android:layout_weight="1"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:src="@drawable/ic_unfriend"-->
            <!--android:id="@+id/image_btn_unfriend"-->
            <!--android:background="@color/white"/>-->
            <ImageButton
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/add_friend_icon"
                android:id="@+id/image_btn_unfriend"
                android:background="@color/colorPrimaryNoColor"
                />

            <ImageButton
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cancel_friend"
                android:id="@+id/image_btn_delete_friend"
                android:background="@color/colorPrimaryNoColor"/>
        </LinearLayout>

    </RelativeLayout>

    <!--<View-->
        <!--android:layout_marginTop="0dp"-->
        <!--android:gravity="bottom"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/rule" />-->



</LinearLayout>