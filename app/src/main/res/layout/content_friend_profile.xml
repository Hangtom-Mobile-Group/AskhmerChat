<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.askhmer.chat.activity.FriendProfile"
    tools:showIn="@layout/activity_friend_profile">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="0dp"
        android:src="@drawable/cover"
        android:scaleType="centerCrop"
      />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:id="@+id/friend_profile"
        android:src="@drawable/profile"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Roger Waters"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/friend_name"
        android:layout_below="@+id/friend_profile"
        android:layout_alignLeft="@+id/friend_profile"
        android:layout_alignStart="@+id/friend_profile" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_below="@+id/friend_name"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="3"
        android:layout_alignLeft="@+id/friend_name"
        android:layout_alignStart="@+id/friend_name">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-13dp"
            android:src="@drawable/ic_action_phone"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="015 82 95 70"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            android:textColor="@color/profile_text"
            android:textSize="18dp"
            android:layout_weight="2"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/phone"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="3"
        android:layout_alignLeft="@+id/friend_name"
        android:layout_alignStart="@+id/friend_name">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-13dp"
            android:src="@drawable/ic_action_email"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="askhmerchat@gmail.com"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            android:textColor="@color/profile_text"
            android:textSize="18dp"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@+id/email"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="3"
        android:layout_alignLeft="@+id/friend_name"
        android:layout_alignStart="@+id/friend_name">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-13dp"
            android:src="@drawable/ic_action_home"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvHomeTown"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Phnom Penh"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            android:textColor="@color/profile_text"
            android:textSize="18dp"
            android:layout_weight="2"/>

    </LinearLayout>



</RelativeLayout>
