<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.askhmer.chat.activity.UserProfile"
    android:background="@color/white"
    tools:showIn="@layout/activity_user_profile">

    <LinearLayout
        android:id="@+id/vi_user_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <!--layout id-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_id"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/editText_id"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="20121482"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:enabled="false"
                android:textColor="@color/profile_text"
                android:textSize="18dp"
                android:layout_weight="3"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_action_edit"
                android:layout_marginRight="12dp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:id="@+id/edit_id"
                android:background="@drawable/btn_edit_selector"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="290dp"
            android:layout_gravity="right"
            android:layout_height="1dp"
            android:background="@color/rule"/>

        <!--end-layout id-->

        <!--layout phone-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_phone"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/editText_phone"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="069-696-469"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:enabled="false"
                android:textColor="@color/profile_text"
                android:textSize="18dp"
                android:layout_weight="3"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_action_edit"
                android:layout_marginRight="12dp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:id="@+id/edit_phone"
                android:scaleType="fitCenter"
                android:background="@drawable/btn_edit_selector"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="290dp"
            android:layout_gravity="right"
            android:layout_height="1dp"
            android:background="@color/rule"/>

        <!--end layout phone-->

        <!--layout email-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_email"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Lundysok168@gmail.com"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:enabled="false"
                android:textColor="@color/profile_text"
                android:textSize="18dp"
                android:layout_weight="3"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_action_edit"
                android:layout_marginRight="12dp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:id="@+id/edit_email"
                android:scaleType="fitCenter"
                android:background="@drawable/btn_edit_selector"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="290dp"
            android:layout_gravity="right"
            android:layout_height="1dp"
            android:background="@color/rule"/>

        <!--end layout email-->

        <!--layout email-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_home"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/editText_current_city"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Phonm Penh"
                    android:enabled="false"
                    android:textColor="@color/profile_text"
                    android:layout_marginBottom="5dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:text="Current City"
                    android:textColor="@color/profile_sub_text"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/editText_hometown"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Kompong Chram"
                    android:enabled="false"
                    android:textColor="@color/profile_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:text="Hometown"
                    android:enabled="false"
                    android:textColor="@color/profile_sub_text"
                    android:textSize="12dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/edit_home"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_action_edit"
                android:layout_marginRight="12dp"
                android:layout_gravity="top"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:background="@drawable/btn_edit_selector"
                android:layout_weight="1"/>

        </LinearLayout>

        <!--end layout email-->

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
