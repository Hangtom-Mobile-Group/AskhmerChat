<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:clickable="true"
                android:background="@drawable/layout_selector">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:weightSum="3">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:id="@+id/layout_round"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="2"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvUserName"
                            android:gravity="start"
                            android:textSize="14dp"
                            android:padding="4dp"
                            android:layout_weight="1"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/userID"
                            android:gravity="start"
                            android:textSize="12dp"
                            android:padding="4dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
<!--

        <View
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/rule"/>
-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/edstart">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/help_setting"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtchangeemailpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/usermgr"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:layout_marginBottom="5dp"
                android:textSize="14dp"
                android:text="@string/emailpassword"/>

            <TextView
                android:id="@+id/txt_switch_langauge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/translation"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/langauge"/>

            <!--add by thoeurn-->
            <TextView
                android:id="@+id/contactus_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/contactus"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Contact Us"/>

            <TextView
                android:id="@+id/howtouseapp_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/howtouseapp"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="How to use App"/>

            <TextView
                android:id="@+id/privacy_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/privacy"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Privacy Statement"/>

            <TextView
                android:id="@+id/terms_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/termsofuse"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Terms of Use"/>
            <!--end add by thoeurn-->

            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_exit"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:layout_marginBottom="5dp"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/logout"/>
        </LinearLayout>
    </ScrollView>

        </LinearLayout>
</FrameLayout>

