        <android.support.v7.widget.CardView
            android:clickable="true"
            android:id="@+id/layout_msg_audio"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.5"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="20dp"
            android:layout_height="40dp"
            android:visibility="gone"
            >
            <RelativeLayout
                android:background="@drawable/rounded_audiol_wrapper_left"
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <ImageButton
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        android:id="@+id/btn_play_audio"
                        android:background="@android:color/transparent"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <RelativeLayout
                        android:id="@+id/audio_layout"
                        android:background="@drawable/rounded_corner_audio_left1"
                        android:layout_weight="4"
                        android:padding="1dp"
                        android:layout_width="0dp"
                        android:layout_height="10dp">
                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:id="@+id/cover_layout"
                            android:layout_width="0dp"
                            android:layout_height="9dp"
                            android:background="@drawable/rounded_corner_audio_left2"
                            android:orientation="horizontal"
                            >
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:text="00:00"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:textColor="#e57373"
                        android:id="@+id/txt_media_second"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <!--Ennd Audio Layout-->
    </LinearLayout>

</LinearLayout>