<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.askhmer.chat.activity.Sticker">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_header"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="59.20dp" />

        <View
            android:background="@color/bg_fab_open"
            android:layout_width="match_parent"
            android:layout_height="0.80dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_body"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="170dp" />

    </LinearLayout>

</FrameLayout>
