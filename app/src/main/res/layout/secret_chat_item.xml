<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_row">
    <LinearLayout
        android:id="@+id/layout_chat_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="false"
            card_view:cardElevation="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:background="@drawable/nor_btn_selector"
                android:clickable="true"
                android:weightSum="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="3.5">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:id="@+id/layout_round"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72.50dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="2.3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_friend_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="17dp"
                            android:textColor="@color/colorDarkGray"
                            android:maxLines="1"
                            android:ellipsize="end"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_current_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="12dp"
                        android:textColor="@color/colorGray"
                        android:gravity="start"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="current message..."/>
<!--
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:id="@+id/divider"
                        android:background="#cccccc"
                        android:layout_marginLeft="10dp"/>
-->

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="3.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12 : 45 AM"
                            android:textSize="12dp"/>
                        <RelativeLayout
                            android:id="@+id/layout_count_current_msg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/bg_have_new_msg"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"/>

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <View
        android:id="@+id/v_is_online"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_right_chat"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top|right"/>
    <Space
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|right"/>

</RelativeLayout>