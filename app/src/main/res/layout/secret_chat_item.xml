<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_row">
    <LinearLayout
        android:id="@+id/layout_chat_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:cardCornerRadius="0dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="70dp"
                android:background="@drawable/nor_btn_selector"
                android:clickable="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:id="@+id/layout_round"
                    android:src="@drawable/profile"
                    />

                <TextView
                    android:id="@+id/tv_friend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friend's name"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/colorDarkGray"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/tv_friend_chat_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chat ID : Longdy1995"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginTop="3dp"
                    android:paddingRight="15dp"
                    android:textSize="10sp"
                    android:textColor="@color/colorGray"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:maxLines="1"/>

            </LinearLayout>
    <!--    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:id="@+id/divider"
            android:background="@color/colorGray"/>-->
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:id="@+id/divider"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="85dp"
        android:layout_below="@id/layout_chat_item"
        android:background="#cccccc"/>

    <View
        android:id="@+id/v_is_online"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_right_chat"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top|right"/>
    <Space
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|right"/>
</RelativeLayout>